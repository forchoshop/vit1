<!-- /snippets/collection-sidebar.liquid -->

<div class="collection_sidebar">
  <h1 class="lefthead" style="background: {{ settings.primary_hover_btn }}">filter<button type="button" class="toggle collapsed pull-right hidden-sm hidden-md hidden-lg" data-toggle="collapse" data-target="#xsfilter"></button></h1>
  <div class="sideleft collapse footer-collapse" id="xsfilter">
  {% if current_tags == blank %}
  {% assign has_refined = false %} 
  {% else %}
  {% assign has_refined = true %} 
  {% endif %}
    
    <div class="sidebar-block">
     {% section 'sidebar-colors' %}
     {% section 'sidebar-tag-filters' %}
    </div>
    <div class="refined-widgets text-right">
      <a href="javascript:void(0)" class="clear-all btn" {% if has_refined == false %}style="display:none"{% endif %}>
        Clear All
      </a>
    </div>
  </div>

</div>
